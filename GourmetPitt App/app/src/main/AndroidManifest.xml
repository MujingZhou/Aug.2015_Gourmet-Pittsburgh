<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.user.gourmetpitt" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="com.google.android.providers.gsf.permission.READ_GSERVICES" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-feature android:name="android.hardware.camera" />
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS"/>
    <!--
 The ACCESS_COARSE/FINE_LOCATION permissions are not required to use
         Google Maps Android API v2, but are recommended.
    -->
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".ui.MainActivity"
            android:label="@string/title_activity_main"
            android:launchMode="singleInstance">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.BusinessHomeActivity"
            android:label="@string/title_activity_business_home" >
        </activity>
        <activity
            android:name=".ui.CusRestDetailActivity"
            android:label="@string/title_activity_cus_rest_detail" >
        </activity>
        <activity
            android:name=".ui.CustomHomeActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name=".ui.CreateAccountActivity"
            android:label="@string/title_activity_create_acount" >
        </activity>

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
        <meta-data
            android:name="com.google.android.maps.v2.API_KEY"
            android:value="@string/google_maps_key" />

        <activity
            android:name=".ui.MapsActivity"
            android:label="@string/title_activity_maps" >
        </activity>
        <activity
            android:name=".ui.SearchResultActivity"
            android:label="@string/title_activity_search_result" >
        </activity>
        <activity
            android:name=".ui.HistoryActivity"
            android:label="@string/title_activity_history" >
        </activity>
        <activity
            android:name=".ui.BusinessMyRestaurantActivity"
            android:label="@string/title_activity_business_my_restaurant" >
        </activity>

        <activity
            android:name=".ui.BusinessCreateRestaurant"
            android:label="@string/title_activity_business_create_restaurant" >
        </activity>
        <activity
            android:name=".ui.MakeReservationActivity"
            android:label="@string/title_activity_make_reservation" >
        </activity>

        <activity
            android:name=".ui.BusinessRestDetailActivity"
            android:label="@string/title_activity_business_create_new_restaurant" >
        </activity>

        <activity
            android:name=".ui.BusinessRestEditActivity"
            android:label="@string/title_activity_business_create_restaurant" >
        </activity>
        <activity
            android:name=".ui.BusinessDishesAddActivity"
            android:label="@string/title_activity_business_create_restaurant" >
        </activity>
        <activity
            android:name=".ui.BusinessDishesEditActivity"
            android:label="@string/title_activity_business_create_restaurant" >
        </activity>
        <activity
            android:name=".ui.BusinessReservationListActivity"
            android:label="@string/title_activity_business_reservation_list" >
        </activity>
        <activity
            android:name=".ui.BusinessContactUsActivity"
            android:label="@string/title_activity_business_contact_us" >
        </activity>
        <service
            android:name=".service.BackGroundMusicService"
            android:enabled="true"
            android:exported="true" >
        </service>
    </application>

</manifest>
