<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="@drawable/coin"
    android:id="@+id/main"
    android:orientation="vertical">

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="UseName"
            android:id="@+id/textViewUserName"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_alignParentStart="true" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/editTextUserName"
            android:layout_row="0"
            android:layout_column="1"
            android:background="#ffffffff"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"/>

        <TextView
            android:paddingTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/passWord"
            android:id="@+id/textViewPassword"
            android:layout_row="1"
            android:layout_column="0" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/editPassword"
            android:layout_row="1"
            android:layout_column="1"
            android:background="#ffffffff"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"/>

        <TextView
            android:paddingTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Login/Register As"
            android:id="@+id/textView2"
            android:layout_row="2"
            android:layout_column="0" />

        <RadioGroup
            android:paddingTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/buttonLogin"
            android:layout_toEndOf="@+id/buttonRegister"
            android:orientation="vertical"
            android:layout_row="2"
            android:layout_column="1"
            android:paddingBottom="50dp">

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Customer"
                android:id="@+id/radioCustomer"
                android:onClick="onRadioButtonClicked" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Business"
                android:id="@+id/radioBusiness"
                android:onClick="onRadioButtonClicked"/>

        </RadioGroup>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="@string/logIn"
            android:id="@+id/buttonLogin"
            android:layout_row="3"
            android:layout_column="0"
            android:onClick="onLogClick"
            android:background="#ffff263a" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="Register"
            android:id="@+id/buttonRegister"
            android:layout_row="3"
            android:layout_column="1"
            android:onClick="onRegClick"
            android:background="#ffff2618" />


    </GridLayout>

</RelativeLayout>
