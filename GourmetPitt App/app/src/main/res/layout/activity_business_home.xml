<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.user.gourmetpitt.ui.BusinessHomeActivity">


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:id="@+id/linearLayout1">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/imageView10"
            android:src="@drawable/jt0"/>



        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/business_logout"
            android:src="@drawable/business_logout"
            android:layout_marginLeft="400dp"
            android:onClick="onClickBusinessLogout" />

    </LinearLayout>

    <LinearLayout
        android:paddingTop="40dp"
        android:orientation="horizontal"
        android:layout_width="560dp"
        android:layout_height="500dp"
        android:layout_below="@+id/linearLayout1"
        android:id="@+id/linearLayout2">


        <Button
            android:layout_width="fill_parent"
            android:layout_height="500dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:background="@drawable/rain"
            android:text="My Restaurants"
            android:id="@+id/buttonMyRestaurant"
            android:gravity="center_vertical|center_horizontal"
            android:clickable="true"
            android:onClick="clickMyRestaurant"
            android:textSize="100dp"
            android:textColor="#ff2e36be"
            android:textStyle="bold|italic" />

    </LinearLayout>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Contact Us"
        android:id="@+id/button5"
        android:layout_alignParentBottom="true"
        android:onClick="onClickContactUs"
        android:textSize="40dp"
        android:layout_marginBottom="50dp"
        android:background="#ff2697ff"
        android:textColor="#ffffffff"
        android:textStyle="bold|italic"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp" />

</RelativeLayout>
