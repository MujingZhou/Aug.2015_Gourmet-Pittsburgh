<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.user.gourmetpitt.ui.PersonalInfoFragment">

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:id="@+id/gridLayout1">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/imageView"
            android:layout_row="0"
            android:layout_column="0"
            android:src="@drawable/jt0"
            />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_row="0"
            android:layout_column="1">

            <TextView
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/userName"
                android:id="@+id/textView"
                android:gravity="center_vertical|center_horizontal" />

        </LinearLayout>

    </GridLayout>

    <GridLayout
        android:paddingTop="20dp"
        android:id="@+id/gridLayout2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/gridLayout1">

        <ImageView
            android:layout_width="160dp"
            android:layout_height="240dp"
            android:id="@+id/imageReserve"
            android:layout_row="0"
            android:layout_column="0"
            android:src="@drawable/reservation"
            />

        <GridLayout
            android:paddingLeft="70dp"
            android:layout_width="wrap_content"
            android:layout_height="240dp"
            android:layout_row="0"
            android:layout_column="1">


            <ListView
                android:layout_width="300dp"
                android:layout_height="190dp"
                android:id="@+id/listView3"
                android:layout_row="0"
                android:layout_column="0" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_row="1"
                android:layout_column="0">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="delete\nmode"
                    android:id="@+id/deleteReserve"/>

            </LinearLayout>

        </GridLayout>

    </GridLayout>

    <GridLayout
        android:paddingTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/gridLayout2">


        <TextView
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/favorite"
            android:id="@+id/textView5"
            android:layout_row="0"
            android:layout_column="0"
            android:gravity="center_vertical|center_horizontal" />

        <TextView
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/rating"
            android:id="@+id/textView6"
            android:layout_row="0"
            android:layout_column="1"
            android:gravity="center_vertical|center_horizontal" />

        <ListView
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:id="@+id/listView1"
            android:layout_row="1"
            android:layout_column="0" />

        <LinearLayout
            android:paddingTop="20dp"
            android:orientation="horizontal"
            android:layout_width="300dp"
            android:layout_height="100dp"
            android:layout_row="2"
            android:layout_column="0">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="delete\nmode"
                android:id="@+id/buttonDelete"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="visit\nmode"
                android:id="@+id/buttonVisit" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reset\nmode"
                android:id="@+id/buttonReset" />

        </LinearLayout>

        <ListView
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:id="@+id/listView2"
            android:layout_row="1"
            android:layout_column="1" />

        <LinearLayout
            android:paddingTop="20dp"
            android:orientation="horizontal"
            android:layout_width="300dp"
            android:layout_height="100dp"
            android:layout_row="2"
            android:layout_column="1">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="delete\nmode"
                android:id="@+id/buttonDeleteRate"/>


        </LinearLayout>

    </GridLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="controlmusic"
        android:id="@+id/bgmbutton"
        android:layout_alignParentTop="true"
        android:layout_alignEnd="@+id/gridLayout2" />

</RelativeLayout>
