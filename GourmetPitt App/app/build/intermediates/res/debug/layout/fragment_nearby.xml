<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.user.gourmetpitt.ui.NearbyFragment">

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:id="@+id/gridLayout4">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/nearby"
            android:id="@+id/textViewNear"
            android:layout_row="0"
            android:layout_column="1" />

    </GridLayout>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editNearBy"
        android:layout_below="@+id/gridLayout4"
        android:layout_alignParentStart="true"
        android:text="filter" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:id="@+id/NearByList"
        android:layout_below="@+id/editNearBy"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/mapbutton" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="See Map"
        android:id="@+id/mapbutton"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />


</RelativeLayout>
