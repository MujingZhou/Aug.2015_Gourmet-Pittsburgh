<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.user.gourmetpitt.ui.SearchFragment"
    android:background="@drawable/cake">


    <TextView
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/enter"
        android:id="@+id/textViewEnter"
        android:layout_row="0"
        android:layout_column="1"
        android:textIsSelectable="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/editTextSearch"
        android:layout_marginTop="94dp"
        android:layout_centerHorizontal="true"
        android:autoText="false"
        android:background="#fffffdfd"
        android:text="what do you want to search?" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Search"
        android:id="@+id/buttonSearch"
        android:layout_marginTop="66dp"
        android:layout_below="@+id/editTextSearch"
        android:layout_marginEnd="43dp" />


    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cheese"
        android:id="@+id/hotcheese"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/buttonSearch"
        android:layout_marginBottom="62dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="steak"
        android:id="@+id/hotsteak"
        android:layout_alignTop="@+id/hotcheese"
        android:layout_toEndOf="@+id/hotcheese" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="sea food"
        android:id="@+id/hotseafood"
        android:layout_alignTop="@+id/hotsteak"
        android:layout_toEndOf="@+id/hotsteak" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="voice"
        android:id="@+id/voiceinputbutton"
        android:layout_alignTop="@+id/buttonSearch"
        android:layout_toEndOf="@+id/buttonSearch" />


</RelativeLayout><!-- From: file:/Users/User/Downloads/GourmetPitt3%206/app/src/main/res/layout/fragment_search.xml -->