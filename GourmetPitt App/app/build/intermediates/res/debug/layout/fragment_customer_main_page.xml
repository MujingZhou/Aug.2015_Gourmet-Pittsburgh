<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/scrollView"
    android:paddingLeft="20dp"
    android:layout_below="@+id/gridLayout1">
<RelativeLayout  android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.user.gourmetpitt.ui.CustomerMainPageFragment">

    <GridLayout
        android:id="@+id/gripLayout1"
        android:layout_width="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_height="80dp">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/imageTitle1"
            android:src="@drawable/jt0"
            android:layout_row="0"
            android:layout_column="0"/>

        <ImageView
            android:layout_width="400dp"
            android:layout_height="80dp"
            android:id="@+id/imageTitle2"
            android:src="@drawable/welcomepic"
            android:layout_row="0"
            android:layout_column="1"/>

        <Button
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:id="@+id/logout"
            android:background="@drawable/logout"
            android:layout_row="0"
            android:layout_column="2"/>

    </GridLayout>



    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="50dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:id="@+id/gridLayout5"
        android:layout_below="@+id/gridLayout1">

        <ImageView
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:id="@+id/imageView1"
            android:layout_row="0"
            android:layout_column="0"
            android:src="@drawable/rest1"/>

        <ImageView
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:id="@+id/imageView2"
            android:layout_row="0"
            android:layout_column="1"
            android:src="@drawable/rest2"/>

        <ImageView
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:id="@+id/imageView3"
            android:layout_row="0"
            android:layout_column="2"
            android:src="@drawable/rest3"/>

        <ImageView
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:id="@+id/imageView4"
            android:layout_row="1"
            android:layout_column="0"
            android:src="@drawable/rest4"/>

        <ImageView
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:id="@+id/imageView5"
            android:layout_row="1"
            android:layout_column="1"
            android:src="@drawable/rest5"/>

        <ImageView
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:id="@+id/imageView6"
            android:layout_row="1"
            android:layout_column="2"
            android:src="@drawable/rest6"/>

        <ImageView
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:id="@+id/imageView7"
            android:layout_row="2"
            android:layout_column="0"
            android:src="@drawable/rest7"/>

        <ImageView
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:id="@+id/imageView8"
            android:layout_row="2"
            android:layout_column="1"
            android:src="@drawable/rest8"/>

        <ImageView
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:id="@+id/imageView9"
            android:layout_row="2"
            android:layout_column="2"
            android:src="@drawable/rest9"/>

    </GridLayout>



</RelativeLayout>
