<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container" android:layout_width="match_parent"
    android:layout_height="match_parent" >
<RelativeLayout  android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:id="@+id/restDetail"
    tools:context="com.example.user.gourmetpitt.ui.CusRestDetailActivity">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/burgerKing"
        android:id="@+id/textView10"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:gravity="center_vertical|center_horizontal" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/textView10"
        android:layout_alignParentStart="true"
        android:id="@+id/linearLayout1">

        <EditText
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:inputType="text"
            android:id="@+id/editReview" />

        <TextView
            android:layout_width="400dp"
            android:layout_height="60dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Average Rate: 8.7/10"
            android:id="@+id/textView11"
            android:gravity="center_vertical|center_horizontal" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/linearLayout1"
        android:id="@+id/linearLayout2">


        <ImageView
            android:layout_width="120dp"
            android:layout_height="60dp"
            android:id="@+id/imageView14"
            android:src="@drawable/rate"
            android:clickable="true"/>

        <EditText
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:inputType="numberDecimal"
            android:ems="10"
            android:id="@+id/editText"
            android:layout_weight="1" />

        <ImageView
            android:layout_width="250dp"
            android:layout_height="60dp"
            android:id="@+id/imageView15"
            android:src="@drawable/reservebutton"
            android:clickable="true"
            android:onClick="onReserveClick"/>

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/imageView16"
            android:src="@drawable/favoritesbutton"
            android:clickable="true"
            android:onClick="onFavClick"/>

    </LinearLayout>

    <LinearLayout
        android:paddingTop="40dp"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayout2"
        android:id="@+id/linearLayout3">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="260dp"
                android:layout_height="40dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Famous Dishes"
                android:id="@+id/textView12" />

            <ListView
                android:layout_width="260dp"
                android:layout_height="300dp"
                android:id="@+id/listView1" />

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="260dp"
            android:layout_height="340dp"
            android:layout_below="@+id/linearLayout2"
            android:layout_toEndOf="@+id/linearLayout3">


            <TextView
                android:layout_width="260dp"
                android:layout_height="40dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Tele: 411-991-4423"
                android:id="@+id/textView13" />

            <TextView
                android:layout_width="260dp"
                android:layout_height="40dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Location: South Craig 666"
                android:id="@+id/textView14" />

            <TextView
                android:layout_width="260dp"
                android:layout_height="40dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Reviews"
                android:id="@+id/textView15" />

            <ListView
                android:layout_width="260dp"
                android:layout_height="220dp"
                android:id="@+id/listView2" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:paddingTop="20dp"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayout3"
        android:id="@+id/linearLayout">

        <TextView
            android:layout_width="150dp"
            android:layout_height="200dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Photos"
            android:id="@+id/textView16"
            android:gravity="center_vertical|center_horizontal" />

        <HorizontalScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/horizontalScrollView">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="300dp"
                android:layout_height="200dp"
                android:layout_alignBottom="@+id/linearLayout"
                android:layout_toEndOf="@+id/linearLayout">

                <ImageView
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:id="@+id/imageView18"
                    android:src="@drawable/rest1" />

                <ImageView
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:id="@+id/imageView19"
                    android:src="@drawable/rest2" />

                <ImageView
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:id="@+id/imageView20"
                    android:src="@drawable/rest3" />

                <ImageView
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:id="@+id/imageView21"
                    android:src="@drawable/rest4" />

            </LinearLayout>

        </HorizontalScrollView>

    </LinearLayout>

</RelativeLayout>
</FrameLayout><!-- From: file:/Users/User/Downloads/GourmetPitt3%206/app/src/main/res/layout/activity_cus_rest_detail.xml -->