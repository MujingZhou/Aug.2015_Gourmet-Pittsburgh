<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.user.gourmetpitt.ui.BusinessCreateRestaurant">

    <ImageView
        android:layout_width="600dp"
        android:layout_height="185dp"
        android:id="@+id/imageView28" />

    <Button
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:id="@+id/imagePhoto"
        android:layout_alignParentRight="true"
        android:layout_marginRight="70dp"
        android:layout_marginTop="150dp"
        android:background="@drawable/edit_photo"
        android:onClick="clickCamera" />

    <ImageButton
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:id="@+id/imageCamera"
        android:layout_alignParentRight="true"
        android:layout_marginTop="150dp"
        android:background="@drawable/edit_camera"
        android:onClick="clickCamera" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/imageView25"
        android:background="@drawable/myrest_name"
        android:layout_marginTop="200dp" />

    <EditText
        android:layout_width="450dp"
        android:layout_height="wrap_content"
        android:id="@+id/editName"
        android:textSize="40dp"
        android:layout_marginLeft="75dp"
        android:layout_marginTop="200dp"
        android:hint="   Restaurant Name"
        android:textStyle="italic" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/imageView24"
        android:background="@drawable/myrest_tele"
        android:layout_marginTop="275dp" />

    <EditText
        android:layout_width="450dp"
        android:layout_height="wrap_content"
        android:id="@+id/editTelephone"
        android:textSize="40dp"
        android:layout_marginTop="275dp"
        android:layout_marginLeft="75dp"
        android:numeric="integer"
        android:inputType="phone|number"
        android:hint="   Phone"
        android:textStyle="italic" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/imageView23"
        android:background="@drawable/myrest_location"
        android:layout_marginTop="350dp" />

    <EditText
        android:layout_width="450dp"
        android:layout_height="wrap_content"
        android:id="@+id/editLocation"
        android:textSize="40dp"
        android:layout_marginTop="350dp"
        android:layout_marginLeft="75dp"
        android:hint="   Location"
        android:textStyle="italic" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/imageView26"
        android:background="@drawable/myrest_openhour"
        android:layout_marginTop="425dp" />

    <EditText
        android:layout_width="450dp"
        android:layout_height="wrap_content"
        android:id="@+id/editOpenHour"
        android:textSize="40dp"
        android:layout_marginTop="425dp"
        android:layout_marginLeft="75dp"
        android:hint="   Open Hour"
        android:textStyle="italic" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/imageView27"
        android:background="@drawable/myrest_flavor"
        android:layout_marginTop="500dp" />

    <EditText
        android:layout_width="450dp"
        android:layout_height="wrap_content"
        android:id="@+id/editFlavor"
        android:textSize="40dp"
        android:layout_marginTop="500dp"
        android:layout_marginLeft="75dp"
        android:hint="   Flavor"
        android:textStyle="italic" />


    <Button
        android:textAllCaps="false"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="OK"
        android:id="@+id/buttonEditOK"
        android:layout_marginTop="600dp"
        android:textSize="40dp"
        android:gravity="center"
        android:onClick="clickEditOK"
        android:background="#ff2697ff"
        android:textColor="#ffffffff"
        android:layout_marginLeft="20dp"
        android:textStyle="italic" />

    <Button
        android:textAllCaps="false"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="@string/restCreateCancel"
        android:id="@+id/button3"
        android:layout_marginTop="600dp"
        android:textSize="40dp"
        android:gravity="center"
        android:layout_alignParentRight="true"
        android:background="#ff2697ff"
        android:textStyle="italic"
        android:textColor="#ffffffff"
        android:layout_marginRight="20dp" />

</RelativeLayout>
