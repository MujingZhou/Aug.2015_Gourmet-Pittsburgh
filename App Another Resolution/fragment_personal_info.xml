<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.user.gourmetpitt.ui.PersonalInfoFragment">

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:id="@+id/gridLayout1">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/imageView"
            android:layout_row="0"
            android:layout_column="0"
            android:src="@drawable/jt0"
            />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_row="0"
            android:layout_column="1">

            <TextView
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/userName"
                android:id="@+id/textView"
                android:gravity="center_vertical|center_horizontal"
                android:textSize="13dp" />

        </LinearLayout>

    </GridLayout>

    <GridLayout
        android:paddingTop="10dp"
        android:id="@+id/gridLayout2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/gridLayout1">

        <ImageView
            android:layout_width="90dp"
            android:layout_height="120dp"
            android:id="@+id/imageReserve"
            android:layout_row="0"
            android:layout_column="0"
            android:src="@drawable/reservation"
            />

        <GridLayout
            android:paddingLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="120dp"
            android:layout_row="0"
            android:layout_column="1">


            <ListView
                android:layout_width="200dp"
                android:layout_height="90dp"
                android:id="@+id/listView3"
                android:layout_row="0"
                android:layout_column="0" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="1"
                android:layout_column="0">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:text="deleteMode"
                    android:id="@+id/deleteReserve"
                    android:textSize="10dp" />

            </LinearLayout>

        </GridLayout>

    </GridLayout>

    <GridLayout
        android:paddingTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/gridLayout2">


        <TextView
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/favorite"
            android:id="@+id/textView5"
            android:layout_row="0"
            android:layout_column="0"
            android:gravity="center_vertical|center_horizontal"
            android:textSize="18dp"/>

        <TextView
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/rating"
            android:id="@+id/textView6"
            android:layout_row="0"
            android:layout_column="1"
            android:textSize="18dp"
            android:gravity="center_vertical|center_horizontal" />

        <ListView
            android:layout_width="150dp"
            android:layout_height="140dp"
            android:id="@+id/listView1"
            android:layout_row="1"
            android:layout_column="0" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="150dp"
            android:layout_height="80dp"
            android:layout_row="2"
            android:layout_column="0">

            <Button
                android:layout_width="50dp"
                android:layout_height="80dp"
                android:text="del\nmode"
                android:id="@+id/buttonDelete"
                android:textSize="8dp"/>

            <Button
                android:layout_width="50dp"
                android:layout_height="80dp"
                android:text="visit\nmode"
                android:id="@+id/buttonVisit"
                android:textSize="8dp"/>

            <Button
                android:layout_width="50dp"
                android:layout_height="80dp"
                android:text="Reset\nmode"
                android:id="@+id/buttonReset"
                android:textSize="8dp"/>

        </LinearLayout>

        <ListView
            android:layout_width="150dp"
            android:layout_height="140dp"
            android:id="@+id/listView2"
            android:layout_row="1"
            android:layout_column="1" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="150dp"
            android:layout_height="80dp"
            android:layout_row="2"
            android:layout_column="1">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="delete\nmode"
                android:textSize="8dp"
                android:id="@+id/buttonDeleteRate"/>


        </LinearLayout>

    </GridLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="controlmusic"
        android:id="@+id/bgmbutton"
        android:layout_alignParentTop="true"
        android:layout_alignEnd="@+id/gridLayout2"
        android:textSize="10dp" />

</RelativeLayout>
